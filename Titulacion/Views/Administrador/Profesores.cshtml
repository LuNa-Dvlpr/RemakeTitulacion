@model List<Titulacion.Models.Profesor>
@{
    ViewData["Title"] = "Administrar Profesores";
    Layout = "~/Views/Shared/_LayaoutAdmin.cshtml";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Usuario</th>
            <th>Nombre Completo</th>
            <th>Correo</th>
            <th>Grupo</th>
            <th>Horas Tutoría</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var profesor in Model)
            {
                <tr>
                    <td>@(profesor.IdUsuarioNavigation?.User ?? "N/A")</td>
                    <td>@($"{profesor.Nombre} {profesor.ApellidoPat} {profesor.ApellidoMat}")</td>
                    <td>@profesor.Correo</td>
                    <td>@profesor.Grupo</td>
                    <td>@profesor.HorasTutoria</td>
                    <td>
                        <form asp-action="EliminarProfesor" asp-controller="Administrador" method="post" onsubmit="return confirm('¿Estás seguro de que deseas eliminar a este profesor?');">
                            <input type="hidden" name="idProfesor" value="@profesor.IdProfesor" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Eliminar
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No se encontraron profesores en la base de datos.</td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-center mt-3">
    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#agregarProfesorModal">
        <i class="bi bi-plus-circle"></i> Agregar Nuevo Profesor
    </button>
</div>

<div class="modal fade" id="agregarProfesorModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Agregar Nuevo Profesor</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="formAgregarProfesor">
                    <div class="mb-2"><input type="text" class="form-control" id="profUser" placeholder="Nombre de Usuario" required></div>
                    <div class="mb-2"><input type="text" class="form-control" id="profNombre" placeholder="Nombre(s)" required></div>
                    <div class="mb-2"><input type="text" class="form-control" id="profApellidoPat" placeholder="Apellido Paterno" required></div>
                    <div class="mb-2"><input type="text" class="form-control" id="profApellidoMat" placeholder="Apellido Materno" required></div>
                    <div class="mb-2"><input type="email" class="form-control" id="profCorreo" placeholder="Correo Electrónico" required></div>
                    <div class="mb-2"><input type="text" class="form-control" id="profGrupo" placeholder="Grupo" required></div>
                    <div class="mb-2"><input type="number" class="form-control" id="profHorasTotales" placeholder="Horas Totales" required></div>
                    <div class="mb-2"><input type="number" class="form-control" id="profHorasTutoria" placeholder="Horas de Tutoría" required></div>
                </form>
                <div id="mensajeModalAgregar" class="mt-3"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnGuardarProfesor">Guardar Profesor</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#btnGuardarProfesor").click(function () {
                var profesorData = {
                    User: $("#profUser").val(),
                    Nombre: $("#profNombre").val(),
                    ApellidoPat: $("#profApellidoPat").val(),
                    ApellidoMat: $("#profApellidoMat").val(),
                    Correo: $("#profCorreo").val(),
                    Grupo: $("#profGrupo").val(),
                    HorasTotales: parseInt($("#profHorasTotales").val()),
                    HorasTutoria: parseInt($("#profHorasTutoria").val())
                };

                $.ajax({
                    url: '@Url.Action("AgregarProfesor", "Administrador")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(profesorData),
                    success: function (response) {
                        if (response.success) {
                            alert(response.message);
                            window.location.reload();
                        } else {
                            $("#mensajeModalAgregar").html('<div class="alert alert-danger">' + response.message + '</div>');
                        }
                    },
                    error: function () {
                        $("#mensajeModalAgregar").html('<div class="alert alert-danger">Error al conectar con el servidor.</div>');
                    }
                });
            });
        });
    </script>
}