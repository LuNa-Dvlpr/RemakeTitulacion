@model Titulacion.Models.AlumnoConfigViewModel
@{
    ViewData["Title"] = "Configuración de Cuenta";
    Layout = "~/Views/Shared/_LayaoutAlumno.cshtml";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="card mb-4">
    <div class="card-header">
        Tu Información
    </div>
    <div class="card-body">
        <p><strong>Nombre:</strong> @Model.NombreCompleto</p>
        <p><strong>Correo:</strong> @Model.Correo</p>
        <p><strong>Grupo:</strong> @Model.Grupo</p>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                Cambiar Contraseña
            </div>
            <div class="card-body">
                <form asp-action="CambiarPassword" asp-controller="Config" method="post">
                    @if (TempData["PasswordError"] != null)
                    {
                        <div class="alert alert-danger">@TempData["PasswordError"]</div>
                    }
                    <div class="form-group mb-3">
                        <label for="nuevaPassword" class="form-label">Nueva Contraseña</label>
                        <input type="password" name="nuevaPassword" class="form-control" required />
                    </div>
                    <div class="form-group mb-3">
                        <label for="confirmarPassword" class="form-label">Confirmar Contraseña</label>
                        <input type="password" name="confirmarPassword" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </form>
            </div>
        </div>
    </div>
</div>