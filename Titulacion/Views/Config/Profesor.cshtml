@model Titulacion.Models.ProfesorConfigViewModel
@{
    ViewData["Title"] = "Configuración de Cuenta";
    Layout = "~/Views/Shared/_LayaoutProfesor.cshtml";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="card mb-4">
    <div class="card-header">
        Tu Información
    </div>
    <div class="card-body">
        <p><strong>Nombre:</strong> @Model.NombreCompleto</p>
        <p><strong>Correo:</strong> @Model.Correo</p>
        <p><strong>Grupo:</strong> @Model.Grupo</p>
        <p><strong>Horas de Tutoría Disponibles:</strong> @Model.HorasTutoria</p>
        <p><strong>Horas Totales:</strong> @Model.HorasTotales</p>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                Cambiar Contraseña
            </div>
            <div class="card-body">
                <form asp-action="CambiarPasswordProfesor" asp-controller="Config" method="post">
                    <div class="form-group mb-3">
                        <label for="nuevaPassword" class="form-label">Nueva Contraseña</label>
                        <input type="password" name="nuevaPassword" class="form-control" required />
                    </div>
                    <div class="form-group mb-3">
                        <label for="confirmarPassword" class="form-label">Confirmar Contraseña</label>
                        <input type="password" name="confirmarPassword" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar Contraseña</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                Cambiar Correo
            </div>
            <div class="card-body">
                <form asp-action="CambiarCorreoProfesor" asp-controller="Config" method="post">
                    <div class="form-group mb-3">
                        <label for="nuevoCorreo" class="form-label">Nuevo Correo Electrónico</label>
                        <input type="email" name="nuevoCorreo" class="form-control" required value="@Model.Correo" />
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar Correo</button>
                </form>
            </div>
        </div>
    </div>
</div>